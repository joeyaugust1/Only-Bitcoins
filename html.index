<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Bitcoin Live Price</title>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">
  <style>
    body {
      background-color: #0e0e0e;
      color: #f2a900;
      font-family: 'Orbitron', sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .container {
      text-align: center;
      padding: 40px;
      border-radius: 20px;
      background-color: #1a1a1a;
      border: 4px solid #f2a900;
      box-shadow:
        0 0 10px rgba(242, 169, 0, 0.8),
        0 0 20px rgba(242, 169, 0, 0.6),
        0 0 30px rgba(242, 169, 0, 0.4),
        0 0 40px rgba(242, 169, 0, 0.2);
    }

    .price {
      font-size: 3em;
      margin-top: 20px;
    }

    .updated {
      font-size: 0.9em;
      color: #aaa;
      margin-top: 10px;
    }

    h1 {
      font-size: 2.5em;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Bitcoin Price</h1>
    <div class="price" id="btcPrice">$...</div>
    <div class="updated" id="lastUpdated">Last updated: --</div>
  </div>

  <script>
    async function fetchPrice() {
      try {
        const res = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd');
        const data = await res.json();
        const price = data.bitcoin.usd;

        document.getElementById('btcPrice').innerText = `$${price.toLocaleString()}`;
        document.getElementById('lastUpdated').innerText = 'Last updated: ' + new Date().toLocaleTimeString();
      } catch (err) {
        console.error('Error fetching price:', err);
      }
    }

    fetchPrice();
    setInterval(fetchPrice, 300000); // every 5 minutes
  </script>
</body>
</html>
